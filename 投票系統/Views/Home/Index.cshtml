@model IEnumerable<VoteOnline.Models.VoteRecord>

@{
    ViewBag.Title = "投票系統";
    var VoteItem = ViewBag.voteitem as List<VoteItem>;
    var VoteCount = ViewBag.VoteCount as List<VoteItemCount>;
    var Users = ViewBag.User as List<User>;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<div class="container">
    <h1 class="mt-5">投票系統</h1>

    <div class="form-group">
        <label for="voter">選擇投票的人：</label>
        <select class="form-control" id="voter" name="voter">
@*            @foreach (var item in Users) {
                <option value="@item.UserName">@item.UserName</option>
			}*@
			<option value="Leo">Leo</option>
			<option value="Randy">Randy</option>
			<option value="RSY">RSY</option>
			<option value="Sandy">Sandy</option>
        </select>
    </div>



    <h2>投票項目：</h2>
    <form asp-controller="VoteRecords" asp-action="Create">
        @foreach (var item in VoteItem) {
            <div class="form-check">
                <input class="form-check-input"id="check" type="checkbox" name="items">
                <input name="UserName" class="form-control" id="name" value="" style="display:none">
                <input name="VoteItemId" class="form-control" value="@item.VoteItemId" style="display:none">
                <label class="form-check-label" for="appleCheckbox">@item.ItemName</label>
            </div>
        }
        <button type="submit" class="btn btn-primary mt-3" >送出</button>

    </form>
    <script>
        changevalue();
        function changevalue() {
            document.getElementById("name").value = document.getElementById("voter").value;
        }

        // 监听下拉选项的变化事件
        document.getElementById("voter").addEventListener("change", changevalue);
    </script>
 


    <div id="votingResults" class="mt-4">
        <h2>投票結果：</h2>
        @foreach (var item in VoteCount) {
            <div id="appleVotes">@item.ItemName: @item.VoteCount 票</div>
        }
        

    </div>
</div>


