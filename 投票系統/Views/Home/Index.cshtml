@model IEnumerable<VoteOnline.Models.VoteRecord>

@{
    ViewBag.Title = "投票系統";
    var VoteItem = ViewBag.voteitem as List<VoteItem>;
    var VoteCount = ViewBag.VoteCount as List<VoteCountsView>;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>



<div class="container">
    <h1 class="mt-5">投票系統</h1>

    <div class="form-group">
        <label for="voter">選擇投票的人：</label>
        <select class="form-control" id="voter" name="voter">
            @foreach (var item in Model) {
                <option value="@item,UserName">@item.UserName</option>
            }
            

        </select>
    </div>

        <h2>投票項目：</h2>

    @foreach (var item in VoteItem) {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="items" value="@item.ItemName" id="appleCheckbox">
            <label class="form-check-label" for="appleCheckbox">@item.ItemName</label>
        </div>
    }
        <button type="submit" class="btn btn-primary mt-3">送出</button>

    <div id="votingResults" class="mt-4">
        <h2>投票結果：</h2>
        @foreach (var item in VoteCount) {
            <div id="appleVotes">@item.ItemName: @item.VoteCount 票</div>
        }
        

    </div>
</div>

<script>
    $(document).ready(function () {
        $("#votingForm").submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: '@Url.Action("Index", "Home")',
                method: 'POST',
                data: $(this).serialize(),
                success: function (data) {
                    // 更新投票結果
                    $("#appleVotes").text("蘋果: " + data.appleVotes + " 票");
                    $("#bananaVotes").text("香蕉: " + data.bananaVotes + " 票");
                    $("#guavaVotes").text("芭樂: " + data.guavaVotes + " 票");
                    window.location.href = '@Url.Action("Index", "Home")';
                },
                error: function () {
                    alert("投票失敗。");
                }
            });
        });
    });
</script>


